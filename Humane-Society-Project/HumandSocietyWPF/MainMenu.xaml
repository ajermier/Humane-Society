<Page x:Class="HumandSocietyWPF.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HumandSocietyWPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainMenu">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="0,10,0,10" Click="AddAnimal_Click">Add Animal</Button>
            <Button Margin="0,10,0,10">Add Adopter</Button>
            <Button Margin="0,10,0,10">Adopt Animal</Button>
        </StackPanel>
    </Grid>
</Page>
